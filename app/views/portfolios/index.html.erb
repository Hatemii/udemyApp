
<h1>Portfolio Items</h1>


<%= link_to "Create New Item", new_portfolio_path , subdomain: "my_subdomain"%>


<%= @portfolio_items.each do |p_item|%>
  <p><%= link_to p_item.title, portfolio_path(p_item) %></p>
  <p><%= p_item.subtitle %></p>
  <p><%= p_item.body %></p>
  <%=image_tag p_item.thumb_image unless p_item.thumb_image.nil?%>
  <%= link_to "Edit", edit_portfolio_path(p_item.id) %>
  <%= link_to "Delete Portfolio Item", portfolio_path(p_item), method: :delete,data:{confirm: "Are you sure"}%>

<% end %>
